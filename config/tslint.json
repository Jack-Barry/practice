{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "indent": [true, "spaces", 2],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "semicolon": [true, "never"]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["public"]
  }
}
